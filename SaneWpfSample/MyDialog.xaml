<Window x:Class="SaneWpfSample.MyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaneWpfSample"
        xmlns:controls="clr-namespace:SaneWpf.Controls;assembly=SaneWpf"
        xmlns:attached="clr-namespace:SaneWpf.Attached;assembly=SaneWpf"
        mc:Ignorable="d"
        Title="MyDialog" Height="450" Width="800">

    <Window.DataContext><local:MyDialogViewModel /></Window.DataContext>

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
        </Style>
    </Window.Resources>

    <GroupBox Header="Person">
        <controls:AutoIndexGrid Columns="Auto,*">
            <Label>Name</Label>
            <TextBox Text="{Binding Name}" />

            <Label>Address</Label>
            <TextBox></TextBox>
        </controls:AutoIndexGrid>
    </GroupBox>
</Window>
